{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "src",

    "lib": ["ES2022"],

    "jsx": "react",
    "forceConsistentCasingInFileNames": true
  }
}
